<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_scrap_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Scrap Name" />

    <EditText
        android:id="@+id/edit_text_scrap_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Scrap Description"
        android:layout_below="@id/edit_text_scrap_name"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edit_text_scrap_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_below="@id/edit_text_scrap_description"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/spinner_scrap_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_scrap_location"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/image_view_scrap"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/spinner_scrap_category"
        android:layout_marginTop="16dp"
        android:contentDescription="Scrap Image" />

    <Button
        android:id="@+id/button_select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_below="@id/image_view_scrap"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_post_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Scrap"
        android:layout_below="@id/image_view_scrap"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>
