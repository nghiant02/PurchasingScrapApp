<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_scrap_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Scrap Name" />

    <EditText
        android:id="@+id/edit_text_scrap_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Scrap Description"
        android:layout_below="@id/edit_text_scrap_name"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/edit_text_scrap_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_below="@id/edit_text_scrap_description"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button_post_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Scrap"
        android:layout_below="@id/edit_text_scrap_location"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
