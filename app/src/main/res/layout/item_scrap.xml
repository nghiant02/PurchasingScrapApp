<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_view_scrap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_view_scrap_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_view_scrap"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Scrap Name" />

    <TextView
        android:id="@+id/text_view_scrap_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_scrap_name"
        android:layout_toEndOf="@id/image_view_scrap"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Scrap Description" />

</RelativeLayout>
