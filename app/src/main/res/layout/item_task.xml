<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_view_scrap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:contentDescription="Scrap Image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_view_scrap_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scrap Name" />

        <TextView
            android:id="@+id/text_view_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description" />

        <TextView
            android:id="@+id/text_view_task_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Status" />

        <TextView
            android:id="@+id/text_view_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location" />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_update_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Progress" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
